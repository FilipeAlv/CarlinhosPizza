<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_margin="15dp"
    android:layout_width="160dp"
    android:layout_height="250dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgProduto"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="27dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtNomeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_card"
                android:layout_marginRight="@dimen/margin_card"
                android:gravity="center"
                android:text="Nome"
                android:textColor="@color/colorTextNomeCard"
                android:textSize="25px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDescricaoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_card"
                android:layout_marginRight="@dimen/margin_card"
                android:layout_marginTop="@dimen/margin_card"
                android:text="Descricao"
                android:textSize="20px" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtValorCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_card"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:gravity="right"
            android:text="R$ 00,00"
            android:textColor="@color/colorPrimary"
            android:textSize="30px"
            android:textStyle="bold" />


    </RelativeLayout>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_marginTop="90dp"
        android:tag="disponivel"
        android:background="@drawable/fab_disponivel_24dp"
        android:elevation="15dp"
        android:layout_gravity="right"/>
</android.support.v7.widget.CardView>