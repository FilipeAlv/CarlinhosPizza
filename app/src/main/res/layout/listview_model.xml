<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="@dimen/margin_card">

    <ImageView
        android:id="@+id/listImageProduto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/margin_card"
        android:background="@drawable/img1" />
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_card">
        <TextView
            android:id="@+id/listNomeProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="@color/colorTextNomeCard"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/listValorProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>
    </LinearLayout
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_margin="@dimen/margin_card">

        <TextView
            android:id="@+id/qnt_menos"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="69dp"
            android:text="-"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="54dp"
            android:text="1" />

        <TextView
            android:id="@+id/qnt_mais"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="39dp"
            android:gravity="center"
            android:text="+"
            android:textStyle="bold" />


        <ImageButton

            android:id="@+id/listIconDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/ic_delete_black_24dp" />

    </RelativeLayout>
</LinearLayout>